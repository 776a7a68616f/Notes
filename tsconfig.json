{
	"compilerOptions": {
		"module": "NodeNext",
		"declaration": false,
		"sourceMap": true,
		"outDir": "./build",
		"strict": true,
		"noImplicitAny": true,
		"resolveJsonModule": true,
		"lib": [
			"ES2022"
		],
		"downlevelIteration": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
	},
	"include": [
		"./src/**/*.js",
		"./src/**/*.ts",
		"./*.ts",
		"./spec/**/*.ts"
	],
	"exclude": [
		"./src/public/**/*",
		"./node_modules/**/*",
		"./spec-es6/**/*.ts"
	],
	"files": [
		"src/types.d.ts"
	]
}